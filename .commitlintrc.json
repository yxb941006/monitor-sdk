{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "ui",
        "docs",
        "tests"
      ]
    ],
    "subject-case": [
      0,
      "never",
      [
        "sentence-case"
      ]
    ],
    "header-max-length": [
      2,
      "always",
      72
    ]
  }
}